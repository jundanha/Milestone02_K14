    font-weight: bold;
    margin-top: 1vw;
    margin-bottom: 1vw;
    margin-left: auto;
    margin-right: auto;
  }

  body button:hover {
    transform: scale(1.08);
  }

  .judulmeet {
    text-align: center;
    text-decoration: none;
    font-family: "roboto", sans-serif;
    font-weight: bold;
    font-size: 2vw;
  }

  .lingkaran {
    width: 17vw;
    height: 17vw;
    border-radius: 50%;
    overflow: hidden;
    background-color: white;
    display: block;
    margin: auto;
    margin-bottom: 1vw;
  }

  .box {
    width: 20vw;
    height: auto;
