<style>
  .navbar-brand em {
    font-weight: bold;
    font-family: Kanit;
    font-style: normal;
    line-height: 90px;
    color: #bc5064;
  }

  .display-4 em {
    font-weight: bold;
    font-family: Kanit;
    font-style: normal;
    color: #bc5064;
  }

  .container-meet {
    width: 20vw;
    height: auto;
    padding: 10px;
    background-color: #180e43;
  }

  .button-meet {
    background-color: #bc5064;
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: block;
    font-size: 1.5vw;
    height: 3.5vw;
    width: 10vw;
    border-radius: 10vw;
