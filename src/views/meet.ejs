<script>
  const button = document.getElementById("submit");
  button.addEventListener("click", (e) => {
    console.log("masuk");
    const meetBaru = {
      judul: document.getElementById("judulMeet").value,
      matkul: document.getElementById("matkulMeet").value,
      platform: document.getElementById("platformMeet").value,
      link: document.getElementById("linkMeet").value,
    };
    fetch("/api/tambahmeet", {
      method: "post",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(meetBaru),
    }).then(() => {
      location.href='/meet';
      
    });
  });
</script>

