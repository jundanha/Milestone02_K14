<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body style="background-color: #180e43;">
    <% namas.forEach(nama => { %>
    <div class="row">
      <div class="col-md-4">
        <div class="container-sip">
          <div class="lingkaran">
            <img />
          </div>
          <div class="box">
            <div class="judulmeet"><%= nama[0] %></div>
            <button class="button-sip">Gabung!</button>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="container-sip">
          <div class="lingkaran">
            <img />
          </div>
          <div class="box">
            <div class="judulmeet"><%= nama[1] %></div>
            <button class="button-sip">Gabung!</button>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="container-sip">
          <div class="lingkaran">
            <img />
          </div>
          <div class="box">
            <div class="judulmeet"><%= nama[2] %></div>
            <button class="button-sip">Gabung!</button>
          </div>
        </div>
      </div>
    </div>

    <% }) %>
  </body>
</html>

<style>
  .container-sip {
    width: 20vw;
    height: auto;
    padding: 10px;
    background-color: #180e43;
  }

  .button-sip {
    background-color: #bc5064;
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: block;
    font-size: 1.5vw;
    height: 3.5vw;
    width: 10vw;
    border-radius: 10vw;
    font-family: "roboto", sans-serif;
    font-weight: bold;
    margin-top: 1vw;
    margin-bottom: 1vw;
    margin-left: auto;
    margin-right: auto;
  }

  body button:hover {
    transform: scale(1.08);
  }

  .judulmeet {
    text-align: center;
    text-decoration: none;
    font-family: "roboto", sans-serif;
    font-weight: bold;
    font-size: 2vw;
  }

  .lingkaran {
    width: 17vw;
    height: 17vw;
    border-radius: 50%;
    overflow: hidden;
    background-color: white;
    display: block;
    margin: auto;
    margin-bottom: 1vw;
  }

  .box {
    width: 20vw;
    height: auto;
    background-color: white;
    border-radius: 2vw;
    padding-top: 1.5vw;
    padding-bottom: 0.1vw;
  }
</style>
